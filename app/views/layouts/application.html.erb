<!DOCTYPE html>
<html>
<head>
<title> Movie Date</title>
<%= csrf_meta_tag %>

</head>
<body>

<header>

<nav class="round">
<ul>

<% if signed_in? %>
<li><%= link_to "Profile", current_user %></li>

<% end %>



<% if signed_in? %>
<li><%= link_to "Sign out", signout_path, :method => :delete %></li>

<% end %>

</ul>
</nav>
</header>

<section class="round">
	<% flash.each do |key, value| %>
<div class="flash <%= key %>"><%= value %></div>
<% end %>
<center>
<%= yield %>
</center>
</section>


</body>
</html>
